<%- include('./layouts/main.ejs')%>
    <section class="container">

        <form class="login-form" action="/login" method="POST">

            <ul>
                <% if(messages.success_msg) {%>
                    <li>
                        <%= messages.success_msg%>
                    </li>

                    <%}%>
            </ul>

            <ul>
                <%if(messages.error) {%>
                    <li>
                        <%= messages.error %>
                    </li>

                    <%}%>
            </ul>

            <!-- <div class="input-group">
                <label for="name">Name</label>
